    <div class="greetings-body" style="">
      <p>
        Listing some of my works
      </p>
    </div>

    <div class="greetings-footer">
      <div class="text-3xl flex flex-row flex-wrap gap-4 pt-4 lg:pt-0 ">
        <a href="//github.com/louiscklaw" target="_blank">
          <i class="fa-brands fa-github"></i>
        </a>
        <a href="//www.linkedin.com/in/louiscklaw" target="_blank">
          <i class="fa-brands fa-linkedin-in"></i>
        </a>
        <a href="//t.me/louislabs" target="_blank">
          <i class="fa-brands fa-telegram"></i>
        </a>
        <a href="//louislabs.slack.com/" target="_blank">
          <i class="fa-brands fa-slack"></i>
        </a>
      </div>
    </div>
  </div>

  <div class="w-full pt-8 lg:pt-0">
    {% set postslist = collections.works | head(-1 * numberOfLatestPostsToShow) %}
    {% set postslistCounter = postsCount %}
